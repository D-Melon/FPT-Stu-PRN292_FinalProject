
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--CSS-->
    @Styles.Render("~/Content/css")
    <link href="~/css/layout.css" rel="stylesheet" />
    <!--DataTable CSS-->
    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <!--Pre-load-->
    <link href="~/css/preload.css" rel="stylesheet" />
    <!--SCRIPTS-->
    <!---->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!--DataTable Scripts-->
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    <!--sweet alert-->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/custom/sweet-alert.js"></script>
</head>
<body style="position: relative;">
    <!--pre-load-->
    <div id="pre-load">
    </div>
    <div id="pre-load-layer">
    </div>

    <div class="navbar navbar-custom navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Job Searching", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/OnlineJobSearching/AccountManagement/JobSeekerManagement">Quản lý tài khoản</a></li>
                    <li><a href="/OnlineJobSearching/JobManagement/Manage">Quản lý công việc</a></li>
                    <li><a href="">Danh sách đăng ký công việc</a></li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-target="">Hello @ViewBag.user.Name</a>
                        <div class="dropdown-menu box-option" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#">Thông tin tài khoản</a><br />
                            <a class="dropdown-item" href="/OnlineJobSearching/Login/Logout" style="color:red">Đăng xuất</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @RenderSection("scripts", required: false)

</body>
</html>
