
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_LayoutJobSeeker.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <h1 class="list-company">Thay đổi mật khẩu</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <form action="../Jobseeker/ChangePassDone" method="post">
            <div class="form-group">
                <label for="pwd">Mật khẩu hiện tại</label>
                <input type="password" class="form-control" id="pwd" placeholder="Nhập mật khẩu" name="password" required>
            </div>
            <div class="form-group">
                <label for="pwd">Mật khẩu mới</label>
                <input type="password" class="form-control" id="pwd" placeholder="Nhập mật khẩu" name="newpass" required>
            </div>
            <div class="form-group">
                <label for="repwd">Nhập lại mật khẩu</label>
                <input type="password" class="form-control" id="repwd" placeholder="Nhập lại mật khẩu" name="renew" required>
            </div>
            <h3 style="color:red">@ViewData["Notification"]</h3>
            <button type="submit" class="btn btn-success">Đăng kí</button>
        </form>
    </div>
</div>



