
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_LayoutJobSeeker.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1 class="list-company">Thông tin tài khoản</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-12" style="margin: 20px 0px;">
        <a href="/OnlineJobSearching/Jobseeker/ChangePass">Thay đổi mật khẩu</a>
    </div>
    <div class="col-sm-12">
        <form action="../Jobseeker/Update" method="post">
            <div class="form-group">
                <label for="username">Họ và tên</label>
                <input type="text" class="form-control" id="username" placeholder="Nhập tên đăng nhập" name="username" required value="@ViewBag.user.Name">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Nhập email" name="email" required value="@ViewBag.user.Email">
            </div>
            <h3 style="color:green">@ViewData["Notification"]</h3>
            <button type="submit" class="btn btn-success">Chỉnh sửa</button>
        </form>
    </div>
</div>

